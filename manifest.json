{
    "manifest_version": 3,
    "name": "Hyperactive Pro Time Enhancer",
    "version": "1.0",
    "description": "Mevcut ve geçmiş ayların çalışma saatlerini görüntüler.",
    "permissions": ["storage", "activeTab", "scripting"],
    "content_scripts": [
      {
        "matches": ["https://hyperactive.pro/time*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  